<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/tabScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:elevation="@dimen/_2sdp">

        <!--tab-->
        <com.astuetz.PagerSlidingTabStrip
            android:id="@+id/tabs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_48sdp"
            android:background="@color/white"
            android:layout_centerInParent="true"
            app:pstsShouldExpand="true"
            app:pstsTabTextAllCaps="false"
            app:pstsIndicatorColor="@color/greenDark"
            app:pstsIndicatorHeight="@dimen/_3sdp"
            app:pstsUnderlineHeight="@dimen/_3sdp"
            app:pstsDividerWidth="0dp"
            app:pstsDividerColor="@color/white"
            app:pstsUnderlineColor="@android:color/transparent"
            app:pstsTabTextSize="@dimen/font_regular"
            app:pstsTabTextColor="@color/color_gray_green"/>

    </RelativeLayout>

    <!--viewpager-->
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>