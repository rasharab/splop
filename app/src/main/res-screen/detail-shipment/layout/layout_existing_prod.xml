<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_10sdp"
    android:background="@drawable/button_gray_dark">

    <!--plus image-->
    <RelativeLayout
        android:id="@+id/imagePlus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_plus"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <!--text existing product-->
    <com.dot.Pops.font.PopsEditText
        android:id="@+id/existing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/existing_product"
        android:textSize="@dimen/font_regular"
        android:textColor="@color/white"
        android:editable="false"
        android:focusableInTouchMode="false"
        android:drawableRight="@drawable/ic_cevron_white"
        android:layout_toRightOf="@+id/imagePlus"
        app:cust_font="ProximaRegular"/>

</RelativeLayout>