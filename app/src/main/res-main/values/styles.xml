<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/greenDark</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="Theme.Input" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:textColorHint">@color/yellow</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/yellow</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <!--main theme-->
    <style name="Theme.Pops" parent="Base.Theme.Pops">
    </style>

    <!--no actionbar-->
    <style name="Base.Theme.Pops" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/gray</item>
        <item name="colorControlActivated">@color/gray</item>
        <item name="colorControlHighlight">@color/gray</item>
    </style>

    <!--animation popup-->
    <style name="SlideBottom" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottomup</item>
        <item name="@android:windowExitAnimation">@anim/bottomdown</item>
    </style>

</resources>
