<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!--layout actionbar-->
    <include
        android:id="@+id/actionbarProfile"
        layout="@layout/actionbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"/>

    <!--content screen-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:orientation="vertical">

        <!--header check rate-->
        <LinearLayout
            android:id="@+id/layoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--logo box-->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_box"
                android:layout_gravity="center_horizontal"/>

            <!--text shipping now-->
            <com.dot.Pops.font.PopsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/shipping_now"
                android:textSize="@dimen/font_very_large"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                app:cust_font="ProximaRegular"/>

            <!--text description-->
            <com.dot.Pops.font.PopsTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="@dimen/font_small"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <!--center content-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="@dimen/_10sdp">

            <!--origin-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <!--title origin-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/titleOrigin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/origin"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/magenta"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:cust_font="ProximaRegular"/>

                <!--origin-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/origin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jakarta"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/grayDark"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/titleOrigin"
                    android:paddingLeft="@dimen/_3sdp"
                    app:cust_font="ProximaRegular"/>

                <!--horizontal line-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayDark"
                    android:layout_below="@+id/origin"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

            <!--destination-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <!--title destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/titleDestination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/destination"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/magenta"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:cust_font="ProximaRegular"/>

                <!--destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/destination"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Malang"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/grayDark"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/titleDestination"
                    android:paddingLeft="@dimen/_3sdp"
                    app:cust_font="ProximaRegular"/>

                <!--horizontal line-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayDark"
                    android:layout_below="@+id/destination"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

            <!--weight-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <!--title destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/titleWeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/weight"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/magenta"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:cust_font="ProximaRegular"/>

                <!--destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 kg"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/grayDark"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/titleWeight"
                    android:paddingLeft="@dimen/_3sdp"
                    app:cust_font="ProximaRegular"/>

                <!--horizontal line-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayDark"
                    android:layout_below="@+id/weight"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

            <!--volume-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp">

                <!--title destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/titleVolume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volum"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/magenta"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    app:cust_font="ProximaRegular"/>

                <!--destination-->
                <com.dot.Pops.font.PopsTextView
                    android:id="@+id/volume"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10 M3"
                    android:textSize="@dimen/font_regular"
                    android:textColor="@color/grayDark"
                    android:gravity="right"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/titleVolume"
                    android:paddingLeft="@dimen/_3sdp"
                    app:cust_font="ProximaRegular"/>

                <!--horizontal line-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grayDark"
                    android:layout_below="@+id/volume"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </RelativeLayout>

        </LinearLayout>

        <!--total-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp">

            <!--title total-->
            <com.dot.Pops.font.PopsTextView
                android:id="@+id/titleTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total"
                android:textSize="@dimen/font_regular"
                android:textColor="@color/greenDark"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                app:cust_font="ProximaRegular"/>

            <!--total-->
            <com.dot.Pops.font.PopsTextView
                android:id="@+id/total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp. 22.000"
                android:textSize="@dimen/font_regular"
                android:textColor="@color/grayDarkPress"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/titleTotal"
                android:gravity="right"
                android:paddingLeft="@dimen/_3sdp"
                app:cust_font="ProximaRegular"/>

        </RelativeLayout>

        <!--button create shipment-->
        <com.dot.Pops.font.PopsButton
            android:id="@+id/buttonCreateShipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/create_shippment"
            android:textSize="@dimen/font_regular"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:background="@drawable/button_yellow"
            android:layout_marginTop="@dimen/_10sdp"
            app:cust_font="ProximaRegular"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_65sdp"/>

</LinearLayout>