<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--layout shipping now -->
    <LinearLayout
        android:id="@+id/shippingNowscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_20sdp"
        android:orientation="vertical">

        <!--text shipping now-->
        <com.dot.Pops.font.PopsTextView
            android:id="@+id/shippingNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shipping_now"
            android:textColor="@color/black"
            android:textSize="@dimen/font_super_large"
            app:cust_font="ProximaSemiBold"/>

        <!--description-->
        <com.dot.Pops.font.PopsTextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lorem ipsum dollar ismet "
            android:textColor="@color/superBlack"
            android:textSize="@dimen/font_regular"
            app:cust_font="ProximaLight"/>

    </LinearLayout>

    <!--layout input description of shipping-->
    <include
        android:id="@+id/centerscreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shippingNowscreen"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        layout="@layout/layout_input_shipping"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_below="@+id/centerscreen"/>

</RelativeLayout>