<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_60sdp"
    android:background="@color/white">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_70sdp"
        android:background="@color/white">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_70sdp"
            android:background="@color/white">

            <!--menu 1-->
            <RelativeLayout
                android:id="@+id/shipment1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white"
                android:padding="@dimen/_10sdp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_doku"
                    android:layout_centerHorizontal="true"/>

                <com.dot.Pops.font.PopsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_shippment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    app:cust_font="ProximaRegular"/>

            </RelativeLayout>

            <!--menu 2-->
            <RelativeLayout
                android:id="@+id/shipment2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_white"
                android:padding="@dimen/_10sdp"
                android:layout_toRightOf="@+id/shipment1">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_location"
                    android:layout_centerHorizontal="true"/>

                <com.dot.Pops.font.PopsTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_shippment"
                    android:textColor="@color/black"
                    android:textSize="@dimen/font_small"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    app:cust_font="ProximaRegular"/>

            </RelativeLayout>

            <!--center line-->
            <ImageView
                android:layout_width="@dimen/_1sdp"
                android:layout_height="match_parent"
                android:background="@color/grayDark"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>